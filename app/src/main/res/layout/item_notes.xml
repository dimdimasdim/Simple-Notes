<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_8"
    android:paddingBottom="@dimen/margin_8"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textTitleNotes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="@string/label_title_notes"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toStartOf="@+id/textDateNotes"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="@dimen/margin_8"
        android:maxLines="1"
        android:ellipsize="end"
        style="@style/word_title"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textDateNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@tools:sample/date/mmddyy"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textTitleNotes"
        app:layout_constraintBottom_toBottomOf="@id/textTitleNotes"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textDescNotes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="@string/label_title_notes"
        app:layout_constraintEnd_toStartOf="@+id/textDateNotes"
        app:layout_constraintTop_toBottomOf="@+id/textTitleNotes"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="@dimen/margin_8"/>

</androidx.constraintlayout.widget.ConstraintLayout>